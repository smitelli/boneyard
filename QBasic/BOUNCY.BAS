BEGIN:
CLS
SCREEN 1
LOCATE 25, 1: PRINT "<SPACE=Redraw>  <ESC=Exit>"
RANDOMIZE TIMER
LET X = INT(RND * 320) + 1
LET Y = INT(RND * 190) + 1
LET XM = (INT(RND * 100) + 1) / 100
LET YM = (INT(RND * 100) + 1) / 100
DO
IF X >= 319 THEN LET XM = XM - (XM * 2)
IF Y >= 189 THEN LET YM = YM - (YM * 2)
IF X <= 1 THEN LET XM = XM - (XM * 2)
IF Y <= 1 THEN LET YM = YM - (YM * 2)
LET X = X + XM
LET Y = Y + YM
PSET (X, Y), 7
LET IT = IT + 1
LET DUMMY$ = INKEY$
IF DUMMY$ = CHR$(27) THEN END
IF DUMMY$ = CHR$(32) THEN GOTO BEGIN
LOOP

